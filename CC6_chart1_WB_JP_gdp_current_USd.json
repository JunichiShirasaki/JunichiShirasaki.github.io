{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Japan: GDP (current US$)",
    "subtitle": "Source: World Bank",
    "anchor": "start",
    "fontSize": 12,
    "subtitleFontSize": 11
  },
  "width": 260,
  "height": 160,
  "data": {
    "url": "https://raw.githubusercontent.com/JunichiShirasaki/JunichiShirasaki.github.io/refs/heads/main/CC6_clean_WB_JP_gdp_current_USd.json",
    "format": {"type": "json"}
  },
  "transform": [
    {"calculate": "toNumber(datum.gdp_current_USd)/1e12", "as": "gdp_trillion"}
  ],
  "mark": "line",
  "encoding": {
    "x": {
      "field": "year",
      "type": "quantitative",
      "axis": {"title": "Year", "format": "d", "tickCount": 6}
    },
    "y": {
      "field": "gdp_trillion",
      "type": "quantitative",
      "axis": {
        "title": "GDP (trillion, current US$)",
        "format": ".1f",
        "tickCount": 5
      }
    },
    "tooltip": [
      {"field": "year", "type": "quantitative", "title": "Year", "format": "d"},
      {
        "field": "gdp_trillion",
        "type": "quantitative",
        "title": "GDP (trillion, current US$)",
        "format": ".2f"
      }
    ]
  },
  "config": {}
}