{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Japan: Inflation, consumer prices (annual %)",
    "subtitle": "Source: World Bank",
    "anchor": "start",
    "fontSize": 12,
    "subtitleFontSize": 11
  },
  "width": 260,
  "height": 160,
  "data": {
    "url": "https://raw.githubusercontent.com/JunichiShirasaki/JunichiShirasaki.github.io/refs/heads/main/CC6_clean_WB_JP_inflation_cpi.json",
    "format": {"type": "json"}
  },
  "mark": "line",
  "encoding": {
    "x": {
      "field": "year",
      "type": "quantitative",
      "axis": {"title": "Year", "format": "d", "tickCount": 6}
    },
    "y": {
      "field": "inflation_cpi",
      "type": "quantitative",
      "axis": {"title": "Inflation rate (%)", "format": ".1f", "tickCount": 10}
    },
    "tooltip": [
      {"field": "year", "type": "quantitative", "title": "Year", "format": "d"},
      {
        "field": "inflation_cpi",
        "type": "quantitative",
        "title": "Inflation rate (%)",
        "format": ".2f"
      }
    ]
  },
  "config": {}
}