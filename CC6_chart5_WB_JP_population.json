{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Japan: Population",
    "subtitle": "Source: World Bank",
    "anchor": "start",
    "fontSize": 12,
    "subtitleFontSize": 11
  },
  "width": 260,
  "height": 160,
  "data": {
    "url": "https://raw.githubusercontent.com/JunichiShirasaki/JunichiShirasaki.github.io/refs/heads/main/CC6_clean_WB_JP_population.json",
    "format": {"type": "json"}
  },
  "transform": [
    {"calculate": "datum.population / 1e6", "as": "population_million"}
  ],
  "mark": "line",
  "encoding": {
    "x": {
      "field": "year",
      "type": "quantitative",
      "axis": {"title": "Year", "format": "d", "tickCount": 6}
    },
    "y": {
      "field": "population_million",
      "type": "quantitative",
      "axis": {
        "title": "Population (million)",
        "format": ".0f",
        "tickCount": 10
      }
    },
    "tooltip": [
      {"field": "year", "type": "quantitative", "title": "Year", "format": "d"},
      {
        "field": "population",
        "type": "quantitative",
        "title": "Population (persons)",
        "format": ","
      }
    ]
  },
  "config": {}
}