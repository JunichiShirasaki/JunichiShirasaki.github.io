{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Research and development expenditure (% of GDP) in Japan, UK, USA",
    "subtitle": "Data Source: World Bank"
  },
  "width": 400,
  "height": 300,
  "padding": {"left": 40, "right": 20, "top": 20, "bottom": 20},
  "data": {
    "url": "https://api.worldbank.org/v2/country/JP;GB;US/indicator/GB.XPD.RSDV.GD.ZS?format=json&per_page=2000",
    "format": {"type": "json", "property": "1"}
  },
  "params": [
    {
      "name": "SelectParam",
      "value": "ALL",
      "bind": {
        "input": "select",
        "options": ["ALL", "JP", "GB", "US"],
        "labels": [
          "ALL (JP, UK, USA)",
          "Japan",
          "United Kingdom",
          "United States"
        ],
        "name": "Country: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.value != null"},
    {"calculate": "toNumber(datum.date)", "as": "year"},
    {"filter": "SelectParam == 'ALL' || datum.country.id == SelectParam"}
  ],
  "mark": {"type": "line", "point": true},
  "encoding": {
    "x": {
      "field": "year",
      "type": "quantitative",
      "title": "Year",
      "axis": {"format": "d"},
      "scale": {"nice": false, "padding": 0}
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "R&D expenditure (% of GDP)",
      "scale": {"zero": true}
    },
    "color": {
      "field": "country.value",
      "type": "nominal",
      "title": "Country",
      "legend": {"orient": "top", "direction": "horizontal"}
    },
    "tooltip": [
      {"field": "country.value", "type": "nominal", "title": "Country"},
      {"field": "year", "type": "quantitative", "title": "Year"},
      {
        "field": "value",
        "type": "quantitative",
        "title": "R&D (% GDP)",
        "format": ".1f"
      }
    ]
  },
  "config": {}
}