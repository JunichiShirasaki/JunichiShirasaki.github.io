{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Renewables vs Inflation during the 2021 - 2023 Energy Shock (OECD)",
    "subtitle": [
      "x: Renewable energy share (avg 2015 - 2021, pre-crisis). ",
      "y: CPI inflation (avg 2021 - 2023).",
      "Points coloured by early/late adoption based on OECD median of 2005 - 2010 renewables."
    ]
  },
  "width": 500,
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/JunichiShirasaki/JunichiShirasaki.github.io/refs/heads/main/Project/base_data/analysis_scatter_renew_inflation.csv"
  },
  "transform": [
    {
      "calculate": "datum.inflation_2021_2023 >= 15 ? datum.country_name : ''",
      "as": "label_country"
    }
  ],
  "layer": [
    {
      "mark": {"type": "point", "filled": true, "size": 110, "opacity": 0.85},
      "encoding": {
        "x": {
          "field": "renew_2015_2021",
          "type": "quantitative",
          "title": "Renewable energy share (%) â€” average 2015 - 2021",
          "axis": {"format": ".1f"}
        },
        "y": {
          "field": "inflation_2021_2023",
          "type": "quantitative",
          "title": "Inflation (CPI, %)  -  average 2021 - 2023",
          "axis": {"format": ".1f"}
        },
        "color": {
          "field": "adopter",
          "type": "nominal",
          "title": "Adoption group",
          "legend": {"orient": "top"}
        },
        "tooltip": [
          {"field": "country_name", "type": "nominal", "title": "Country"},
          {"field": "iso3", "type": "nominal", "title": "ISO3"},
          {"field": "adopter", "type": "nominal", "title": "Group"},
          {
            "field": "renew_2015_2021",
            "type": "quantitative",
            "title": "Renewables (2015 - 2021 avg)",
            "format": ".2f"
          },
          {
            "field": "inflation_2021_2023",
            "type": "quantitative",
            "title": "Inflation (2021 - 2023 avg)",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "transform": [
        {"regression": "inflation_2021_2023", "on": "renew_2015_2021"}
      ],
      "mark": {"type": "line", "strokeDash": [6, 4], "opacity": 0.9},
      "encoding": {
        "x": {"field": "renew_2015_2021", "type": "quantitative"},
        "y": {"field": "inflation_2021_2023", "type": "quantitative"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 6,
        "dy": -6,
        "fontSize": 12
      },
      "encoding": {
        "x": {"field": "renew_2015_2021", "type": "quantitative"},
        "y": {"field": "inflation_2021_2023", "type": "quantitative"},
        "text": {"field": "label_country", "type": "nominal"}
      }
    }
  ],
  "config": {
    "axis": {"labelFontSize": 12, "titleFontSize": 13},
    "title": {"fontSize": 16, "subtitleFontSize": 12},
    "legend": {"labelFontSize": 12, "titleFontSize": 12}
  }
}