{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Pre-crisis Energy Structure: Renewables vs Import Dependence (OECD)",
    "subtitle": [
      "Renewable energy share vs energy import dependence (averages 2015 - 2021).",
      "Colours indicate early vs late renewable adoption based on 2005 - 2010 median."
    ]
  },
  "data": {
    "url": "https://raw.githubusercontent.com/JunichiShirasaki/JunichiShirasaki.github.io/refs/heads/main/Project/base_data/chart2_renew_imports_precrisis.csv"
  },
  "width": 420,
  "height": 320,
  "layer": [
    {
      "mark": {"type": "point", "size": 90, "opacity": 0.75},
      "encoding": {
        "x": {
          "field": "renew_2015_2021",
          "type": "quantitative",
          "title": "Renewable energy share (%) — average 2015–2021"
        },
        "y": {
          "field": "imports_2015_2021",
          "type": "quantitative",
          "title": "Energy imports (% of energy use) — average 2015 - 2021"
        },
        "color": {
          "field": "adopter",
          "type": "nominal",
          "title": "Renewable adoption group"
        },
        "tooltip": [
          {"field": "country_name", "type": "nominal", "title": "Country"},
          {"field": "iso3", "type": "nominal", "title": "ISO3"},
          {"field": "adopter", "type": "nominal", "title": "Adoption group"},
          {
            "field": "renew_2015_2021",
            "type": "quantitative",
            "title": "Renewables (avg 2015 - 2021)",
            "format": ".1f"
          },
          {
            "field": "imports_2015_2021",
            "type": "quantitative",
            "title": "Energy imports (avg 2015 - 2021)",
            "format": ".1f"
          }
        ]
      }
    },
    {
      "mark": {"type": "rule", "strokeDash": [6, 6], "opacity": 0.6},
      "encoding": {
        "x": {
          "aggregate": "median",
          "field": "renew_2015_2021",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {"type": "rule", "strokeDash": [6, 6], "opacity": 0.6},
      "encoding": {
        "y": {
          "aggregate": "median",
          "field": "imports_2015_2021",
          "type": "quantitative"
        }
      }
    }
  ],
  "config": {
    "axis": {"labelFontSize": 12, "titleFontSize": 13},
    "title": {"fontSize": 16, "subtitleFontSize": 12},
    "view": {"stroke": null}
  }
}